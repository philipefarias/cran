<h1>CRAN Packages</h1>

<table class="table">
  <thead>
    <th>
      Name
    </th>
    <th>
      Version
    </th>
    <th>
      Publication
    </th>
    <th>
      Title
    </th>
    <th>
      Author
    </th>
    <th>
      Maintainer
    </th>
  </thead>
  <tbody>
    <% @packages.each do |package| %>
      <tr class="package">
        <td>
          <%= package.name %>
        </td>
        <td>
          <%= package.version %>
        </td>
        <td>
          <%= package.publication %>
        </td>
        <td>
          <%= package.title %>
        </td>
        <td>
          <%= package.authors.to_sentence %>
        </td>
        <td>
          <%= package.maintainers.to_sentence %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
